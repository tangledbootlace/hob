# Production Environment Variables
# These values are provided through GitHub Secrets or Portainer Environment Variables
# DO NOT commit actual secrets to this file

# Docker Registry Configuration
DOCKER_REGISTRY=ghcr.io
IMAGE_TAG=latest

# Database Configuration
# Actual password should be set via GitHub Secrets: DB_PASSWORD
SA_PASSWORD=

# RabbitMQ Configuration
# Actual credentials should be set via GitHub Secrets: RABBITMQ_USER, RABBITMQ_PASSWORD
RABBITMQ_USER=
RABBITMQ_PASSWORD=

# Grafana Configuration
# Actual password should be set via GitHub Secrets: GRAFANA_ADMIN_PASSWORD
GRAFANA_ADMIN_PASSWORD=

# Domain Configuration
# Set these via GitHub Variables or Portainer Environment Variables
HOB_API_DOMAIN=api.yourdomain.com
HOB_DASHBOARD_DOMAIN=dashboard.yourdomain.com
GRAFANA_DOMAIN=grafana.yourdomain.com
PROMETHEUS_DOMAIN=prometheus.yourdomain.com
JAEGER_DOMAIN=jaeger.yourdomain.com
RABBITMQ_DOMAIN=rabbitmq.yourdomain.com

# Worker Configuration
WORKER_SCHEDULE=*/5 * * * *

# Volume Paths
# These should be set to actual server paths in production
DATA_VOLUME_PATH=/path/to/data
REPORTS_VOLUME_PATH=/path/to/reports

# API Environment
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080
HOB_SERVICES_ContainerPort=8080

# OpenTelemetry Configuration
OPENTELEMETRY_SERVICE_NAME=HOB.API
OPENTELEMETRY_JAEGER_ENDPOINT=http://hob-jaeger:4317

# Connection Strings (constructed from secrets above)
# ConnectionStrings__DefaultConnection=Server=hob-db;Database=HOB;User Id=sa;Password=${SA_PASSWORD};TrustServerCertificate=True;MultipleActiveResultSets=True;
# ConnectionStrings__RabbitMQ=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@hob-rabbitmq:5672

# Dashboard Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://hob-api:8080
